{
   "name": "Power Automate Tools(GCC)",
   "description": "This extension enables editing a Power Automate flow definition as JSON. Flows in GCC tenants can be edited with this latest update.",
   "version": "1.3",
   "manifest_version": 3,
   "icons": {
      "512": "icons/pa-tools-512.png",
      "256": "icons/pa-tools-256.png",
      "128": "icons/pa-tools-128.png",
      "48": "icons/pa-tools-48.png"
   },
   "permissions": [
      "activeTab",
      "webRequest",
      "tabs",
      "notifications"
   ],
  "host_permissions": [
  "*://make.gov.powerautomate.us/*",
  "*://*.api.crm9.dynamics.com/*",
  "*://*.api.flow.microsoft.com/*",
  "*://*.api.powerautomate.com/*",
  "*://*.api.powerapps.com/*",
  "*://unitedstates.api.powerapps.com/*",
  "*://europe.api.powerapps.com/*",
  "*://asia.api.powerapps.com/*",
  "*://australia.api.powerapps.com/*",
  "*://india.api.powerapps.com/*",
  "*://japan.api.powerapps.com/*",
  "*://canada.api.powerapps.com/*",
  "*://southamerica.api.powerapps.com/*",
  "*://unitedkingdom.api.powerapps.com/*",
  "*://france.api.powerapps.com/*",
  "*://germany.api.powerapps.com/*",
  "*://switzerland.api.powerapps.com/*",
  "*://usgov.api.powerapps.us/*",
  "*://usgovhigh.api.powerapps.us/*",
  "*://dod.api.powerapps.us/*",
  "*://gov.api.powerapps.us/*",
  "*://*.gov.api.flow.microsoft.us/*",
  "*://gov.api.flow.microsoft.us/*",
  "*://*.gov.api.powerautomate.us/*",
  "*://*.gov.api.powerapps.us/*",
  "*://login.microsoftonline.com/*"
],
   "action": {
      "default_title": "Power Automate Tools(GCC)"
   },
   "background": {
      "service_worker": "background.js"
   }
}